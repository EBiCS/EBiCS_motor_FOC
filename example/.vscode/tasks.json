{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build dev",
            "type": "shell",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "make -j BUILD_ENV=development"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "make",
                "args": [
                    "clean"
                ]
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
          "label": "OpenOCD - Jlink",
          "type": "shell",
          "args": [],
          "linux": {
              "command": "openocd -c 'interface jlink; transport select swd; source [find target/stm32f1x.cfg]'"
          },
          "problemMatcher": []
        },
        {
          "label": "OpenOCD - STLinkV2",
          "type": "shell",
          "args": [],
          "linux": {
            "command": "openocd",
            "args": [
                "-f",
                "${workspaceFolder}/tools/openocd_scripts/stlink-v2.cfg",
                "-f",
                "${workspaceFolder}/tools/openocd_scripts/stm32f1x.cfg"
            ]
          },
          "problemMatcher": []
        }
    ]
}